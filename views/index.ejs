<h2>Tasks</h2>
<a href="/tasks/create" class="btn btn-primary mb-3">Create New Task</a>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.forEach(task => { %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td>
          <a href="/tasks/edit/<%= task.id %>" class="btn btn-primary">Edit</a>
          <form action="/tasks/delete/<%= task.id %>" method="post" style="display: inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
